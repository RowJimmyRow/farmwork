{{> navbar}}
<h1>This is an add new feature page</h1>
<div class="jumbotron jumbotron-fluid dive-display-header">
    <div class="container">
        <h1 class="display-4">Add A Feature</h1>
    </div>
</div>
<div class="container">
    <form action="/features/addFeature" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
        <div class="form-group col-md-5">
            <label for="name">Name of Feature</label>
            <input type="text" class="form-control" name="locFeatureName" id="locFeatureName" placeholder="Feature Name" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>

        <div class="form-group col-md-5">
            <label for="name">Add a picture of the feature</label>
            <input type="file"  class="form-control" name="featurePhoto" id="featurePhoto" required/>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
    <button class="btn btn-primary btn-sm">Add Dive Location</button>
    </form>
</div>