{{> navbar}}
<div class="jumbotron jumbotron-fluid dive-display-header">
    <div class="container">
        <h1 class="display-4">All of the Features tracked on Divetastic</h1>
    </div>
</div>
<a class="btn-1 btn-lg" href="/features/addFeature" role="button">Add a new Feature</a>

<div class="container-fluid">
    <div class="row">
        {{#each features}}
            <div class="card col-sm-6 col-md-4 dive-card">
                <h3 class="card-title">{{this.locFeatureName}}</h3>
                <div class="card-body">
                <img src="{{this.featureURL}}" alt="">
                    <form action="/features/editFeature" method="POST">
                        <input type = "hidden" name = "featureID" value = "{{this.featureID}}"/>
                        <button class="btn-1 btn-sm">Update feature</button>
                    </form>
                    </p>
                </div>
            </div>  
        {{/each}}
    </div>    
</div>