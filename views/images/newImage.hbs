<!-- Adapted from Bootstrap https://getbootstrap.com/docs/4.5/getting-started/introduction/ 
Uses Jumbotron Uses form-group Use column dynamic styling uses needs-validation
-->
{{> navbar}}
<div class="jumbotron jumbotron-fluid dive-display-header">
    <div class="container">
        <h1 class="display-4">Upload an Image</h1>
    </div>
</div>
  <div class="container">
    <form action="/images/addImage" method="POST"  class="needs-validation" enctype="multipart/form-data" novalidate>
        <div class="form-group col-md-5">
            <label for="name">Description</label>
            <input type="text" class="form-control" name="description" id="description" placeholder="Image description" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="form-group col-md-5">
            <label for="name">Upload image</label>
            <input type="file"  class="form-control" name="image" id="image" required/>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <input type = "hidden" name = "diveID" value = "{{diveID.diveID}}"/>
        <input type = "hidden" name = "diverID" value = "{{diverID.diverID}}"/>
    <button class="btn btn-success">Add Image to this dive</button>
    </form>

    <form action="/dives/addMoreFish" method="POST" >
        <input type = "hidden" name = "diveID" value = "{{diveID.diveID}}"/>
        <button class="btn-1">Done adding images ready for fish</button>
    </form>
    <form action="/dives/details" method="POST">
        <input type = "hidden" name = "diveID" value = "{{diveID.diveID}}" />
        <button class="btn-1">No more Images or Fish to Add</button>
    </form>
</div>
