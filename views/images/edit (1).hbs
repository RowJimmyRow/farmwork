{{> navbar}}
<h1>Edit image details</h1>

<div class="container">
    <form action="/images/editImage?_method=PUT" method="POST"  class="needs-validation" enctype="multipart/form-data" novalidate>
        <div class="form-group col-md-5">
            <label for="name">Description</label>
            <input type="text" class="form-control" name="description" id="description" value="{{image.description}}">
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="form-group col-md-5">
            <label for="name">Upload image</label>
            <input type="file"  class="form-control" name="image" id="image"/>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="form-group col-md-5">
            <p>If you uncheck this box, it will remove this image from this dive and will only be accessable through your user images</p>
            <label for="name">Image related to Dive.</label>
            <input type="checkbox" name="diveFKNull" value="notNull" checked/>
        </div>
        <input type = "hidden" name = "diveID" value = "{{image.diveID}}"/>
        <input type = "hidden" name = "imageID" value = "{{image.imageID}}"/>
        <button class="btn btn-primary btn-sm">Save Changes</button>
    </form>