{{> navbar}}
<div class="jumbotron jumbotron-fluid dive-display-header">
    <div class="container">
        <h1 class="display-4">Update A Fish</h1>
    </div>
</div>
<div class="container">
    <form action="/fish/editFish?_method=PUT" method="POST"  class="needs-validation"  enctype="multipart/form-data" novalidate>
        <div class="form-group col-md-5">
            <label for="name">Name of Fish</label>
            <input type="text" class="form-control" name="commonName" id="commonName" value="{{fish.commonName}}" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="form-group col-md-5">
            <label for="name">Scientific name of Fish</label>
            <input type="text" class="form-control" name="scientificName" id="scientificName" value="{{fish.scientificName}}" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="form-group col-md-5">
            <label for="name">Description of Fish</label>
            <input type="text" class="form-control" name="description" id="description" value="{{fish.description}}" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="form-group col-md-5">
            <label for="name">Upload new image</label>
            <input type="file" class="form-control" name="fishImage" id="fishImage">
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <input type="hidden" name="fishID" value="{{fish.fishID}}">
    <button class="btn btn-primary btn-sm">Confirm Changes</button>
    </form>
</div>