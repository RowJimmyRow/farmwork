{{> navbar}}
<div class="jumbotron jumbotron-fluid dive-display-header">
    <div class="container">
        <h1 class="display-4">Add A Location</h1>
    </div>
</div>
<div class="container">
    <form action="/locations/new" method="POST"  class="needs-validation" novalidate>
        <div class="form-group col-md-5">
            <label for="name">Name of Location</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="Location Name" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="form-group col-md-5">
            <label for="name">Location's Nearest City</label>
            <input type="text" class="form-control" name="locCity" id="locCity" placeholder="Location City" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="form-group col-md-5">
            <label for="name">Location's State</label>
            <input type="text" class="form-control" name="locState" id="locState" default="NULL" placeholder="Location State(optional)">
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="form-group col-md-5">
            <label for="location">Location Country</label>
            <input type="text" class="form-control" name="locCountry" id="locCountry" placeholder="Location Country" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="form-group col-md-5">
            <label for="description">Description</label>
            <input type="textbox" class="form-control" name="description" id="description" placeholder="Location Description" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <button class="btn btn-primary btn-sm">Add Dive Location</button>
    </form>
</div>