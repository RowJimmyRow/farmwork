{{> navbar}}
<h1>This site will upload an image</h1>

  <div class="container">
    <form action="/diver/addImage" method="POST"  class="needs-validation" enctype="multipart/form-data" novalidate>
        <div class="form-group col-md-5">
            <label for="name">Description</label>
            <input type="text" class="form-control" name="description" id="description" placeholder="Image description" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="form-group col-md-5">
            <label for="name">Upload image</label>
            <input type="file"  class="form-control" name="image" id="image" required/>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
    <button class="btn btn-primary btn-sm">Add Image to this dive</button>
    </form>
</div>
